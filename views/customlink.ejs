<%- include("partials/header") %>

    <body>
        <% if (success) { %>
            <div class="div-empty-state">
                <p>Message sent</p>
                <img class="empty-state-image" src="/images/checkbox.png" alt="success" />
                <a href="/custompath/<%= path %>?serial=<%= serial %>">Send another message ?</a>
                <a href="/">Home</a>
            </div>
            <% } %>
                <% if (notfound) { %>
                    <div class="div-empty-state margin-top-less">
                        <p style="margin-bottom: -1rem;z-index: 10;font-size: 3rem;">Link is invalid or expired.</p>
                        <img class="empty-state-image invalid-image size-md ne-margin-top" src="/images/invalid.jpg"
                            alt="empty" />
                        <a href="/">Home</a>
                    </div>
                    <% } %>
                        <% if (error) { %>
                            <div class="div-empty-state">
                                <p style="font-size: 3rem;">Some error occurred!</p>
                                <img class="empty-state-image" src="/images/error.png" alt="error" />
                                <a href="/">Home</a>
                            </div>
                            <% } %>
                                <% if (!notfound && !error && !success) { %>
                                    <form class="div-flex-col form-post"
                                        action="/custompath/<%= path %>?serial=<%= serial %>&sa=<%= sa %>"
                                        method="post">
                                        <p id="custom-link-path">
                                            Message <%= name %>
                                        </p>
                                        <p class="ta-center">They will not know who sent this message.</p>
                                        <div class="div-flex-row">
                                            <p id="form-p2" class="grey-bg"> <span>Body</span></p>
                                            <textarea id="messageBody" class="text-area" name="directedMessage"
                                                rows="10" cols="60" aria-label="With textarea"
                                                placeholder="Type your message here" required></textarea>
                                        </div>
                                        <button id="btn-send-message" class="btn-black" type="submit" name="serial"
                                            value="<%= serial %>">Send
                                            Message</button>
                                        <a href="/">Home</a>
                                    </form>
                                    <% } %>
                                        <script src="/customlinks.js" async defer></script>
    </body>

    <%- include("partials/footer") %>